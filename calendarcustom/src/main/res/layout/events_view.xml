<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.pirataram.calendarcustom.ui.OneDayLayout
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:clock_text_color="@color/clock_text_hour"
        app:clock_text_size="10dp"
        app:clock_text_margin_top="40sp"
        app:clock_text_margin_end="20sp"
        app:clock_text_margin_start="15sp"
        app:clock_line_now_color="@color/clock_line_now"
        app:clock_horizontal_dividers_color="@color/clock_dividers"
        app:clock_line_now_radius="8sp"
        app:clock_text_mask="H:mm"
        />

</androidx.constraintlayout.widget.ConstraintLayout>